---
import Breadcrumbs from "@/components/Breadcrumbs.astro"
import Link from "@/components/Link.astro"
import PageHead from "@/components/PageHead.astro"
import SkinCard from "@/components/SkinCard.astro"
import Layout from "@/layouts/Layout.astro"
import { getAllSkins } from "@/lib/data-utils"

const skins = await getAllSkins()
---

<Layout>
  <PageHead slot="head" title="Skins" />
  <Breadcrumbs items={[{ label: "Skins", icon: "lucide:paintbrush" }]} />

  <section>
    <div class="min-w-full">
      <h1 class="mb-4 text-4xl leading-tight font-medium sm:text-5xl">
        <Link
          href="https://osu.ppy.sh/users/14709263"
          class="text-foreground/70 hover:text-foreground"
          external>HDDTHR</Link
        > skins
      </h1>
      <div class="flex flex-col gap-4">
        {skins.map((skin) => <SkinCard skin={skin} />)}
      </div>
    </div>
  </section>
</Layout>
